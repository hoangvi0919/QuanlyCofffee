<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuanLi.QuanLiNhanVien">

    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@drawable/backround2">
        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="160dp"
            android:layout_marginEnd="163dp"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/txtAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Quản Lý"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="627dp"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        android:layout_below="@id/LL1"
        tools:layout_editor_absoluteX="1dp"
        android:padding="20dp">
        <Button
            android:id="@+id/btnUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Quản Lý Tài Khoản"
            android:background="@drawable/custom_graybutton"/>

        <Button
            android:id="@+id/btnDep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:text="Quản Lý Phân Quyền"
            android:background="@drawable/custom_graybutton"/>

        <Button
            android:id="@+id/btnDrink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:text="Quản Lý Món"
            android:background="@drawable/custom_graybutton"/>
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:text="Đăng Xuất"
            android:textColor="@color/white"
            android:background="@drawable/custom_buttonred"/>

    </LinearLayout>
</RelativeLayout>