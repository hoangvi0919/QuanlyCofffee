<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NhanVien.Hoadon"
    android:orientation="vertical"
    android:background="@drawable/backround2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_show"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_margin="20dp"
        android:paddingTop="600px"
        android:textColor="@color/white"></TextView>


    <Button
        android:id="@+id/btn_themmon"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_whitebutton"
        android:text="Chọn món"></Button>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Đăng xuất"
        android:background="@drawable/custom_buttonred"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />
</LinearLayout>